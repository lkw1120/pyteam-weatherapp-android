<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeatherApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:actionBarSize">60dp</item>
    </style>

    <style name="Theme.WeatherApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherApp</item>
    </style>

    <style name="Theme.WeatherApp.OSS" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:actionBarSize">60dp</item>
    </style>

</resources>